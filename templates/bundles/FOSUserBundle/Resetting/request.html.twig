{% block title %}Mot de passe perdu{% endblock %}

{% extends 'bundles/FOSUserBundle/layout.html.twig' %}

{% block fos_user_content %}

{% trans_default_domain 'FOSUserBundle' %}

<div class="container d-flex justify-content-center mt-5">
    <div class="col-lg-5 col-md-8">
        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
            <div>
                <label for="username">{{ 'resetting.request.username'|trans }}</label>
                <input type="text"class="col-md-12 form-control mt-3" id="username" name="username" required="required" />
            </div>
            <div>
                <input type="submit" class="col-md-12 btn btn-outline-success mt-3"  value="{{ 'resetting.request.submit'|trans }}" />
            </div>
        </form>
    </div>
</div>

{% endblock %}